{% extends 'base.html.twig' %}

{% block title %}Bug{% endblock %}

{% block body %}
    <h1>Bug</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bug.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bug.Description }}</td>
            </tr>
            <tr>
                <th>Severity</th>
                <td>{{ bug.Severity }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bug.Status }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ bug.Date ? bug.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bug_index') }}">back to list</a>

    <a href="{{ path('bug_edit', {'id': bug.id}) }}">edit</a>

    {{ include('bug/_delete_form.html.twig') }}
{% endblock %}
