{% extends 'base.html.twig' %}

{% block title %}Programmer{% endblock %}

{% block body %}
    <h1>Programmer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programmer.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ programmer.FirstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ programmer.LastName }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
