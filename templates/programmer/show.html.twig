            </tr>
            <tr>
                <th>Level</th>
                <td>{{ programmer.Level }}</td>
            </tr>
            <tr>
                <th>Specialization</th>
                <td>{{ programmer.Specialization }}</td>
            </tr>
            <tr>
                <th>Technology</th>
                <td>{{ programmer.Technology }}</td>
            </tr>
        </tbody>
    </table>

